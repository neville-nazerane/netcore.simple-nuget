<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <PackageId>NetCore.Simple</PackageId>
    <PackageVersion>2.6.7</PackageVersion>
    <Authors>Neville Nazerane</Authors>
    <Description>
      Simplifies usage of .net core mvc and web api application with strongly typed features and customizable templates.
    </Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>
      - Added Make overload for custom fields (not in model)
    </PackageReleaseNotes>
    <PackageTags>netcore mvc views Customizable Simple Easy Quick</PackageTags>
    <!--<PackageIconUrl>http://netcoresimple.azurewebsites.net/content/themes/icon.png</PackageIconUrl>-->
    <PackageProjectUrl>http://netcoresimple.azurewebsites.net</PackageProjectUrl>
    <RootNamespace>NetCore.Simple</RootNamespace>
    <AssemblyName>NetCore.Simple</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.0" />
    <PackageReference Include="NetCore.Simple.Core" Version="1.2.6" />
  </ItemGroup>
  
  
</Project>
